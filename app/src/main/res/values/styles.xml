<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--主页下的按钮-->
    <style name="MianButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_height">52dip</item>
        <!--<item name="android:textColor">@color/nav</item>-->
        <item name="android:textColor">@drawable/selector_radiobuttom_color</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <!--头部和底部layout样式-->
    <style name="layoutheadFoot">
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--头部的两个图片-->
    <style name="titleImageView">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/selector_color_main_add</item>
    </style>
    <!--主页输入框-->
    <style name="titleEditText">
        <item name="android:focusable">false</item>
        <item name="android:hint">搜索一下</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/greySub</item>
        <item name="android:drawableRight">@mipmap/ic_edit_search</item>
        <item name="android:background">@drawable/bg_edit_text_search</item>
    </style>
    <!--我的头部-->
    <style name="userHead">
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--我的头部 任务头像-->
    <style name="userHeadImage">
        <item name="android:layout_height">64dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">64dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@mipmap/ic_default_user_head</item>
    </style>
    <!--user中间的三个-->
    <style name="userCenter">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:layout_height">64dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <!--user全部订单-->
    <style name="userAllGoods">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_marginTop">16dip</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/blackSub</item>
        <item name="android:drawableRight">@mipmap/ic_normal_dot_left</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>
    <!--订单内容-->
    <style name="userAllGoodsMessage">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_height">56dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/greyAdd</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>
    <!--user收货地址和系统设置-->
    <style name="userAddress">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/blackSub</item>
        <item name="android:drawableRight">@mipmap/ic_normal_dot_left</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>
</resources>
